<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
    <display-name>Quotes</display-name>
    <description>
      Sample code for the Winter web framework. 
    </description>

    <filter>
      <filter-name>winter</filter-name>
      <filter-class>winter.samples.quotes.QuotesFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>winter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>